{
  "name": "Fakers",
  "version": "1.0",
  "description": "AI web tool to evaluate fake comments",
  "permissions": ["storage", "activeTab", "declarativeContent"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/index.js"]
    }
  ],
  "background": {
    "scripts": ["background/index.js"],
    "persistent": false
  },
  "page_action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "16": "images/images/get_started16.png",
      "32": "images/images/get_started32.png",
      "48": "images/images/get_started48.png",
      "128": "images/images/get_started128.png"
    }
  },
  "icons": {
    "16": "images/images/get_started16.png",
    "32": "images/images/get_started32.png",
    "48": "images/images/get_started48.png",
    "128": "images/images/get_started128.png"
  },
  "manifest_version": 2
}
